<h2>Editing "<%= @author.title %>"</h2>
<%= form_tag author_path(@author), method: "patch" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <p>Required</p>
    <%= text_field_tag "name", @author.title %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <p>Must be unique</p>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone_number" %>
    <br />
    <%= text_area_tag "phone_number", @author.phone_number %>
  </div>
  <%= submit_tag "Update" %>
<% end %>

